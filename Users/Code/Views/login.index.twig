{# empty Twig template #}

{% import "form.macro.twig" as forms %}

{{ set_assets('applications/Users/assets/css/login.css') }}

<div class="user_login_bg">

    <form  method="post" action="{{ generate_url('login-check') }}" role="form">

        {% if show_title %}
            <div class="well well-sm"> Login Detail</div>        
        {% endif %}

        <div class="form-horizontal">

            <div class="col-sm-12">
                <label>Username or Email</label>
                {{ forms.input('username', 'text', null) }}
            </div>

            <div class="col-sm-12">
                <label>Password</label>
                {{ forms.input('password', 'password', null) }}
            </div>

        </div>

        <div class="form-group form_links-group">
            <div class="col-sm-12">
                <div class="form-group">
                    <input type="checkbox" name="remember_me"/> Remember Me
                </div>

                <a href="{{ generate_url('forgot-password') }}" title='Forget Password?'>
                    Forget Password?
                </a><br>

                <!--
                <a href="{{ generate_url('users.users.password') }}" title=Forget Username?>
                    Forget Username?
                </a><br>
                -->
                <br>

                <div>

                    <button type="submit" class="btn btn-success btn-sm btn-flat">
                        <i class="fa fa-arrow-right"></i> Login
                    </button>

                    {% if show_cancel %}
                        <a class="btn btn-danger btn-sm btn-flat" href="{{ generate_url('home') }}" title='Cancel'>
                            <i class=" fa fa-mail-reply"></i> Cancel
                        </a>
                    {% endif %} 
                </div>

            </div>
        </div>

        {{ forms.input('return_url', 'hidden', return_url|raw ) }}

        {{ forms.input('_token' ) }} 

    </form>


</div>